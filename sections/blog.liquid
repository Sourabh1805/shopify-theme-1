<section class="blog gray-bg">
  <div class="container">
    <header class="text-center">
      <h2 class="text-uppercase"><small>{{section.settings.top_text}}</small>{{section.settings.bottom_text}}</h2>
    </header>
    <div class="row">

      {% assign blog = blogs[section.settings.blog] %}
 
      {% for article in blog.articles %}
        <!-- post-->
        <div class="col-lg-6">
          <div class="post post-gray d-flex align-items-center flex-md-row flex-column">
            <div class="thumbnail d-flex-align-items-center justify-content-center">
              <img src="{{article.image.src | img_url: '2048x'}}" alt="...">
            </div>
            <div class="info"> 
              <h4 class="h5"><a href="{{article.url}}">{{article.title}}</a></h4>
              <span class="date"><i class="fa fa-clock-o"></i>{{article.created_at | date: "%B %d, %Y"}}</span>

              {% if article.excerpt.size > 0 %}
                <p>{{article.excerpt}}</p>
              {% else %}
                <p>{{article.content | strip_html | truncatewords: 30}}</p>
              {% endif %}

              <a href="{{article.url}}" class="read-more">Read More<i class="fa fa-long-arrow-right"></i></a>
            </div>
          </div>
        </div>
        <!-- /end post-->
      {% endfor %}

    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Blog Section",
    "settings": [
      {
        "id": "top_text",
        "type": "text",
        "label": "Top Text"
      },
      {
        "id": "bottom_text",
        "type": "text",
        "label": "Bottom Text"
      },
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      }
    ]
  }
{% endschema %}